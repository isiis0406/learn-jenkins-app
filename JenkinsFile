pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm install -g pnpm
                    pnpm --version
                    pnpm install
                    pnpm run build
                    ls -la
                '''
            }
        }
    }
}